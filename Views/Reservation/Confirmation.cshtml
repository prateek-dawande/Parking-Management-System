@model ParkingManagementSystem.Models.ConfirmationViewModel

@{
    ViewBag.Title = "Booking Confirmation";
}

<h2>Booking Confirmation</h2>

<div class="card">
    <div class="card-header">
        <h3>Booking Details</h3>
    </div>
    <div class="card-body">
        <p><strong>User Name:</strong> @Model.UserName</p>
        <p><strong>Car Number:</strong> @Model.CarNumber</p>
        <p><strong>Slot Number:</strong> @Model.SlotNumber</p>
        <p><strong>Booking Date:</strong> @Model.BookingDate.ToString("D")</p>
    </div>
</div>