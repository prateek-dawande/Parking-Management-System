@model ParkingManagementSystem.Models.SelectDateViewModel

@{
    ViewBag.Title = "Select Booking Date";
}

<h2>Select Booking Date</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        @Html.LabelFor(model => model.BookingDate, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.BookingDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
        @Html.ValidationMessageFor(model => model.BookingDate, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Check Availability</button>
}